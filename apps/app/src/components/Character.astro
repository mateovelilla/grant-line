---
import "atropos/atropos.css";
const buch_classes = [
    "img-placeholder h-48 sm:h-56 md:h-64 bg-gray-100 flex items-center justify-center",
    "img-placeholder h-36 sm:h-40 bg-gray-100 flex items-center justify-center"
]
const get_random_class = buch_classes[Math.floor(Math.random() * buch_classes.length)]
