---
import Character from "./Character.astro"
const cards = [
    { title: "Card 1", size: "col-span-2 row-span-2 bg-blue-500" },
    { title: "Card 2", size: "col-span-1 row-span-1 bg-green-500" },
    { title: "Card 3", size: "col-span-1 row-span-2 bg-yellow-500" },
    { title: "Card 4", size: "col-span-2 row-span-1 bg-red-500" },
    { title: "Card 5", size: "col-span-2 row-span-2 bg-blue-500" },
    { title: "Card 6", size: "col-span-1 row-span-1 bg-green-500" },
    { title: "Card 7", size: "col-span-1 row-span-2 bg-yellow-500" },
    { title: "Card 8", size: "col-span-2 row-span-1 bg-red-500" },
]
---
<main class="main [grid-area:main] m-15 ">
    <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 auto-rows-[150px] gap-4 p-6">
        {cards.map(card => (
            <div class={`flex items-center justify-center text-white text-xl font-bold rounded-xl shadow-lg ${card.size}`}>
                {card.title}
            </div>
        ))}
    </section>
</main>